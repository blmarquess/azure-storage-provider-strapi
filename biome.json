{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "lineWidth": 100,
      "quoteStyle": "single",
      "trailingComma": "none",
      "bracketSpacing": true
    }
  }
}